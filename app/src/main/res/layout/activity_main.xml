<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btnShowNotification"
        android:layout_width="664dp"
        android:layout_height="77dp"
        android:layout_marginTop="120dp"
        android:textStyle="bold"
        android:textAllCaps="true"
        android:textSize="19dp"
        android:textColor="#1E1EB5"
        android:layout_marginBottom="120dp"
        android:layout_weight="1"
        android:text="Show all Notification" />

    <Button
        android:layout_width="664dp"
        android:layout_height="77dp"
        android:id="@+id/btnCancelNotification"
        android:layout_marginTop="210dp"
        android:textSize="19dp"
        android:textColor="#1E55B5"
        android:text="Cancel all Notification"
        android:textStyle="bold"/>


</RelativeLayout>